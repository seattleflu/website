
<% include ./partials/header  {header: header, pageData: req.pageData, siteData: req.siteData, nav: nav, enroll: enroll} %>
<div class="container-full home-header" style="background-image: url(<%- homeData[0].fields.headerBg.fields.file.url + '?fm=jpg&fl=progressive' %>);">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-lg-9" style="z-index: 1;">
          <h1><%= homeData[0].fields.headline %></h1>
          <p><%= homeData[0].fields.featuredCopy %></p>
          <div class="home-logos">
            <img src="/images/logo_UWMedicine_white.svg" alt="UW Medicine">
            <img src="/images/logo_FredHutch_white.svg" alt="Fred Hutch">
            <img src="/images/logo_SeattleChildrens_white.svg" alt="Seattle Childrens">
          </div>
        </div>
        <div id="homeSVG">
          <svg viewBox="0 0 1440 200" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <g id="Curve_Divider_White" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <path d="M1080,157.502628 C1260,157.502628 1380,105.001752 1440,0 L1439.6621,200 L0,200 L0,157.500128 L1080,157.502628 Z" id="Rectangle" fill="#FFFFFF"></path>
            </g>
          </svg>
          <!--<svg viewBox="0 0 1440 166" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <g id="Curve_Divider_Reverse_Blue" stroke="none" stroke-width="1" fill="white" fill-rule="evenodd">
                <path d="M1080,157.502628 C1260,157.502628 1380,105.001752 1440,0 L1440,166 L0,166 L0,157.500128 L1080,157.502628 Z" id="Rectangle" fill="white" transform="translate(720.000000, 83.000000) scale(1, -1) translate(-720.000000, -83.000000) "></path>
            </g>
          </svg>
          -->
        </div>
      </div>
    </div>
    <!-- <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none">
      <polygon fill="white" points="0,100 0,0 104,100"/>
    </svg> -->
</div>
<div class="container home-content">
  <div class="row study-modules">
    <% if(homeData[0].fields.studyModules) { %>
      <div class="col-lg-12">
        <%- md.render(homeData[0].fields.section1Main) %><br />
      </div>
        <% homeData[0].fields.studyModules.forEach((study) => { %>
          <% if(homeData[0].fields.studyModules.length > 3) { %>
            <div class="col-lg-6">
          <% } else { %>
            <div class="col-lg-4">
          <% } %>
            <div class="study-module">
              <% if(study.fields.studyIcon) { %>
                <div class="study-module-icon" style="background-image: url(<%= study.fields.studyIcon.fields.file.url %>);"></div>
              <% } %>
              <h3><%= study.fields.studyName %></h3>
              <p><%= study.fields.studyDescription %></p>
              <% if(study.fields.page) { %>
                <a href="<%- study.fields.page.fields.urlSegment %>" class="cta"></a>
              <% } %>
            </div>
          </div>
        <% }) %>
    <% } %>
    
  </div>
</div>
<div class="container home-content-2">
  <div class="row flu-101">
    <div class="col-lg-5 offset-lg-1" id="flu101-left">
      <img src="<%- homeData[0].fields.section3Image.fields.file.url + '?fm=jpg&fl=progressive&w=660&h=400&fit=fill' %>" alt="<%- homeData[0].fields.section3Image.fields.description %>">
    </div>
    <div class="col-lg-6 large" id="flu101-right">
      <%- md.render(homeData[0].fields.section3Main) %>
      <h4><a href="<%= homeData[0].fields.section3Url %>" class="cta"><%= homeData[0].fields.section3Cta %></a></h4>
    </div>
  </div>

<% if(siteData[0].fields.promoBannerCopy) { %>
  <div class="row">
    <div class="col-lg-12">
      <div class="home-callout">
        <%- md.render(siteData[0].fields.promoBannerCopy) %>
        <a href="<%- siteData[0].fields.promoBannerLink %>"><button class="green"><%- siteData[0].fields.promoBannerCta %></button></a>
      </div>
    </div>
  </div>
<% } %>
</div>

<% include ./partials/footer  {logos: logos} %>
